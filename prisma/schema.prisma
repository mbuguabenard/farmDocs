generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This maps to Supabase's built-in auth.users table.
/// Supabase manages this automatically (donâ€™t try to migrate it with Prisma).
model AuthUser {
  id        String   @id
  email     String?
  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")

  // Relation to your app-specific profile
  profile   UserProfile?
}

/// Your custom profile table linked to Supabase Auth
model UserProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  authUser    AuthUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  bio         String?
  farmingType String
  farmSize    String
  location    String?
  experience  Int?
  createdAt   DateTime @default(now())
}
